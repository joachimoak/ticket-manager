{
  "name": "ticket-to-ride",
  "version": "1.0.0",
  "description": "NodeJS technical case",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "migration:create": "typeorm migration:create --dir src/migrations --name",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate --name",
    "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node ./node_modules/typeorm/cli.js migration:revert",
    "test": "jest --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Koami KPOGNON",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/joachimoak/ticket-to-ride/issues"
  },
  "homepage": "https://github.com/joachimoak/ticket-to-ride#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.4.7",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-esm-transformer": "^1.0.0",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4",
    "ts-jest": "^27.0.4",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^10.1.0",
    "typeorm": "^0.2.35"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "jest-esm-transformer"
    },
    "transformIgnorePatterns": []
  }
}
